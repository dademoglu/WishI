<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WishAnswerFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:id="@+id/wish_answer_linear_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:id="@+id/wish_answer_question_text_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="16dp"
           android:layout_marginVertical="6dp"
           tools:text="I am a question"
           android:textSize="32sp"
           android:textStyle="bold"
           android:textColor="@color/textDark"
           android:textAlignment="viewStart"/>
       <EditText
           android:id="@+id/wish_answer_question_edit_text_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="16dp"
           android:layout_marginVertical="6dp"
           tools:text="I am an answer!!!"
           android:textSize="32sp"
           android:inputType="textMultiLine"
           android:hint="@string/answer_hint"
           android:textColor="@color/textDark"
           android:textAlignment="viewStart"/>


   </LinearLayout>

    <Button
        android:id="@+id/wish_answer_submit_button"
        android:layout_below="@id/wish_answer_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="32dp"
        android:backgroundTint="@color/mainRed"
        android:text="@string/answer_button_text"
        android:textColor="@color/textWhite"
        android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>