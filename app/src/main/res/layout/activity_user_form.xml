<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFormActivity"
    android:orientation="vertical"
    >



    <EditText
        android:id="@+id/ask_age_form_user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="age pls"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:inputType="number"
            />



    <EditText
        android:id="@+id/ask_bio_form_user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bio pls"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/ask_display_name_form_user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="display name pls"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/ask_photo_url_form_user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="photo URL pls"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/save_user_to_db_form_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        />

</LinearLayout>